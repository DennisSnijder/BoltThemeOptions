<div class="option-wrapper">
    <label for="{{ field.getSlug() }}" class="option-title">{{ field.getName() }}</label>

    <select class="form-control"  id="{{ field.getSlug() }}" name="{{ tab.getSlug() }}[{{ field.getSlug() }}]">
        {% for option in field.getOptions() %}
            <option {% if field.getValue() == option %} selected {% endif %} value="{{ option }}">{{ option }}</option>
        {% endfor %}
    </select>

</div>